{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "es2017"],
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/@types/*"]
    }
  },
  "include": ["src", "declarations.d.ts"],
  "exclude": ["node_modules", "build"]
}
